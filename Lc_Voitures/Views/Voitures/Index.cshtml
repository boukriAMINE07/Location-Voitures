@model IEnumerable<Lc_Voitures.Models.Voiture>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Créer un nouveau", "Create", null, new { @class = "btn btn-outline-dark" })
</p>
<table class="table table-hover  ">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Modele.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modele.serie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.matricule)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categorie.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_Mise_En_Circulation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prix_Par_Jour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.carburant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th>ACTION</th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Modele.nom)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Modele.serie)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.matricule)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Categorie.type)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.date_Mise_En_Circulation)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.prix_Par_Jour)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.carburant)
    </td>
    <td>
        <img src="/Voitures/ImageVoiture/@item.voitureID" alt="" style="width: 250px; max-width: 200px" />
    </td>
    <td>
        <div class="btn-group">

            @Html.ActionLink("Modifier", "Edit", new { id = item.voitureID }, new { @class = "btn btn-outline-primary" })
            @Html.ActionLink("Details", "Details", new { id = item.voitureID }, new { @class = "btn btn-outline-success" })
            @Html.ActionLink("Supprimer", "Delete", new { id = item.voitureID }, new { @class = "btn btn-outline-danger" })


        </div>
        
    </td>
</tr>
}

</table>
