@model Lc_Voitures.Models.Voiture

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script>
    $(document).ready(function () {
        if (@ViewBag.carNumber==0) {
            $('#alert').text("The car is not available. Try to pick other car");
            $('#alerti').toggle();
        }
        else {
            $("#info").toggle();
        }
    });

</script>

