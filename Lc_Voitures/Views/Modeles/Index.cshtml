@model IEnumerable<Lc_Voitures.Models.Modele>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: #6c757d; ">Modele</h2>

<p>
    @Html.ActionLink("Créer un nouveau", "Create", null, new { @class = "btn btn-outline-dark" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
           MODELE ID
        </th>
        <th>
           NOM
        </th>
        <th>
            SERIE
        </th>
        <th>ACTION</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.modeleID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nom)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.serie)
    </td>
    <td>
        <div class="btn-group">


            @Html.ActionLink("Modifier", "Edit", new { id = item.modeleID }, new { @class = "btn btn-outline-primary" })
            @Html.ActionLink("Details", "Details", new { id = item.modeleID }, new { @class = "btn btn-outline-success" })
            @Html.ActionLink("Supprimer", "Delete", new { id = item.modeleID }, new { @class = "btn btn-outline-danger" })
        </div>

    </td>
</tr>
}

</table>
