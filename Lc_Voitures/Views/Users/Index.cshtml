@model IEnumerable<Lc_Voitures.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Créer un nouveau", "Create", null, new { @class = "btn btn-outline-dark" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nom_Complet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_Naissance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tele)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.image_CIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image_Permis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAdmin)
        </th>
        <th>ACTION</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.nom_Complet)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.date_Naissance)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tele)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    


    <td>
        <img src="/Users/ImageCIN/@item.userID" alt="" height=80 width=120 />
    </td>
    <td>
        <img src="/Users/ImagePermis/@item.userID" alt="" height=80 width=120 />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsAdmin)
    </td>
    <td>
        <div class="btn-group">

            @Html.ActionLink("Modifier", "Edit", new { id = item.userID }, new { @class = "btn btn-outline-primary" }) 
            @Html.ActionLink("Details", "Details", new { id = item.userID }, new { @class = "btn btn-outline-success" }) 
            @Html.ActionLink("Supprimer", "Delete", new { id = item.userID }, new { @class = "btn btn-outline-danger" })

            
        </div>
        
    </td>
</tr>
}

</table>
