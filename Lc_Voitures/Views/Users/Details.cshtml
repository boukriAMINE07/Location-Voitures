@model Lc_Voitures.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="color: #6c757d;">Details Utilsateur</h2>



<hr />
<br />



<table class="table table-striped table-hover  ">
    <tr>
        <th>
            Nom Complet
        </th>
        <th>
            Date Naissance
        </th>
        <th>
            Telephone
        </th>
        <th>
            Email
        </th>

        <th>
            CIN
        </th>
        <th>
            Permis
        </th>

        <th>
            ACTION
        </th>


    </tr>
    <tr>

        <td>
            @Html.DisplayFor(model => model.nom_Complet)
        </td>
        <td>
            @Html.DisplayFor(model => model.date_Naissance)
        </td>
        <td>
            @Html.DisplayFor(model => model.tele)
        </td>

        <td>

            @Html.DisplayFor(model => model.email)
        </td>
        <td>
            <img style="max-height:300px; max-width:300px;" class="group list-group-image" src="/Users/ImageCIN/@Model.userID" alt="@Model.nom_Complet image" />

        </td>
        <td>
            <img style="max-height: 300px; max-width: 300px;" class="group list-group-image" src="/Users/ImagePermis/@Model.userID" alt="@Model.nom_Complet image" />

        </td>

        <td>
            @Html.ActionLink("Modifier", "Edit", new { id = Model.userID }, new { @class = "btn btn-outline-info" })
            @Html.ActionLink("Annuler", "Index", new { id = Model.userID }, new { @class = "btn btn-outline-dark" })
        </td>
        

    </tr>
</table>
